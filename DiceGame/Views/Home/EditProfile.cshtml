@model   DiceGame.Models.User
    @{
    ViewBag.Title = "EditProfile";
}
<head>
    <script>
        function previewImage(event) {
            // Get a reference to the image element
            var image = document.getElementById("hi");
            image.innerHTML(URL.createObjectURL(event.target.files[0]));
            // Set its source to the file in the <input type=file element
            // image.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>
</head>
<div class="container">
    <h1>Profile</h1>
    <hr>
    <div class="row">
        <!-- left column -->
        <div class="col-md-3">
            <div class="text-center">
                <form action="/Login/Change" method="post" >
                    <img src="//placehold.it/100" class="avatar img-circle" id="profileImage" alt="avatar">
                    <input type="file" name="photo" id="photo" />

                    <input type="button" value="Upload" onclick="previewImage(event)" />
                </form>
            </div>
        </div>

        <!-- edit form column -->
        <div class="col-md-9 personal-info">
            <!-- <div class="alert alert-info alert-dismissable">
         <a class="panel-close close" data-dismiss="alert">×</a>
         <i class="fa fa-coffee"></i>
         This is an <strong>.alert</strong>. Use this to show important messages to the user.
     </div>-->
            <h3></h3>
            @using (Html.BeginForm("save", "Login"))
            {
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label class="col-lg-3 control-label">First name:</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="text" id="hi" value="@Model.FirstName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Last name:</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="text" value="@Model.LastName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Username:</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="text" value="@Model.UserName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Email:</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="text" value="@Model.Email">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Gender:</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="text" value="@Model.Gender">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Birthday:</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="text" value="@Model.BirthDay">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Password:</label>
                        <div class="col-md-8">
                            <input class="form-control" type="password" value="@Model.Password">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label"></label>
                        <div class="col-md-8">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <span></span>
                            <input type="reset" class="btn btn-default" value="Cancel">
                        </div>
                    </div>
                </form>
            }

        </div>
    </div>
</div>
<hr>

