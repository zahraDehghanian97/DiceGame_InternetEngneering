@model DiceGame.Models.DesignedGame
@{
    ViewBag.Title = "DesignGame";
}

<br />
@{if (!string.IsNullOrEmpty(Session["username"] as string))
    {<div style="float:right">
            <h3>
                <b>
                    @Html.ActionLink("Exit", "logout", "Login")
                </b>
            </h3>
        </div>
        <b><h2>Wellcome @Session["username"]</h2></b>

    }
    else
    {
        <div style="float:right">
            <h3>
                <b>
                    @Html.ActionLink("signup", "signUp", "Login") / @Html.ActionLink("login", "login", "Login")
                </b>
            </h3>

        </div>
    }
}
<br><br>


<h2>DesignGame</h2>
@using (Html.BeginForm("DesignGameSave", "Home"))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.Label("1.Maximum Of Score:")
        @Html.TextBoxFor(m => m.MaxScore, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("2.Write the current score zero when dice appear:")
        @Html.TextBoxFor(m => m.CurrentScore, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("3.Play with this number of dice:")
        <br />
        1: @Html.RadioButtonFor(m => m.DiceCount, 1)
        2: @Html.RadioButtonFor(m => m.DiceCount, 2)
        4: @Html.RadioButtonFor(m => m.DiceCount, 4)


    </div>

    <button type="submit" class="btn btn-primary">Save</button>

}
